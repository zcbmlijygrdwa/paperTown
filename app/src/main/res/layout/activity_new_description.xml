<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="zhenyuyang.cec150.ece.ucsb.edu.project.NewDescriptionActivity">


    <TextView
        android:id="@+id/textView_new_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp"
        android:paddingTop="10sp"
        android:text="Title"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editText_new_description"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:hint="Describe the item with a precise, concise, and professional tone." />

    <Button
        android:id="@+id/button_new_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

</LinearLayout>
